<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewNote"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/small_dp"
        android:layout_marginEnd="@dimen/small_dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/small_dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewNoteTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/small_dp"
                android:paddingTop="@dimen/small_dp"
                android:paddingEnd="@dimen/small_dp"
                android:textColor="@color/card_title"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="@font/open_sans_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="Dene" />

            <View
                android:id="@+id/viewWhite"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/small_dp"
                android:layout_marginTop="@dimen/small_dp"
                android:layout_marginEnd="@dimen/small_dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNoteTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewNoteDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/small_dp"
                android:paddingTop="@dimen/small_dp"
                android:paddingEnd="@dimen/small_dp"
                android:paddingBottom="@dimen/small_dp"
                android:textColor="@color/card_description"
                android:textSize="16sp"
                app:fontFamily="@font/open_sans_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewWhite"
                tool:text="DsidlşasajskldklaşsdkaskşldaslşkdasşdjklaskdjşasşkldlşkasdkjşlaskljdşklaşjsdklşjaskjlşdjkalsdjklşaskjlşdEMEM" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>